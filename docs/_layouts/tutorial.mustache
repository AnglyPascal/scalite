---
layout: default
---

<section class="docs">
  <div class="grid">
    {{> tutorials_contents_mobile }}
    <div class="unit four-fifths">
      <article>
        {{ #page }}
        <header class="tutorial-header">
          <div class="improve right hide-on-mobiles">
            <a href="https://github.com/jekyll/jekyll/edit/master/docs/{{ relativePath }}">
              <i class="fa fa-pencil"></i> &nbsp;Improve this page
            </a>
          </div>
          <h1 class="tutorial-title">{{ page.title }}</h1>
          <div class="tutorial-meta">
            <span class="tutorial-date">
              {{ date }}
            </span>
            {{ #author }}
            <a href="https://github.com/{{ github }}" class="tutorial-author">
              <span class="author-name">{{ name }}</span>
            </a>
            {{ /author }}
          </div>
        </header>
        {{ /page }}
        {{> content }}
        {{> include section_nav_tutorials }}
      </article>
    </div>
    {{> include tutorials_contents }}
    <div class="clear"></div>
  </div>
</section>
